{% extends "@SunshineForm/Default/formLayout.html.twig" %}

{% block main_content %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="btn-group btn-group-sm">
                        <button type="button" class="btn btn-default" id="append"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>{{ 'sunshine.label.create'|trans }}</button>
                        <button type="button" class="btn btn-default" id="modify"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>{{ 'sunshine.label.modify'|trans }}</button>
                        <button type="button" class="btn btn-default" id="delete"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span>{{ 'sunshine.label.delete'|trans }}</button>
                    </div>
                </div>
                <div class="box-body pad table-responsive">
                    <div class="col-md-2" style="padding-left: 0px;">
                        <div id="accordion" class="panel-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">{{ 'sunshine.applicationForm.new.common'|trans }}</a>
                                    </h4>
                                </div>
                                <div id="collapseTwo" class="panel-collapse collapse in">
                                    <div class="panel-body">
                                        <div class="col-md-6">
                                            <div id="text_button" class="draggable ui-widget-content">
                                                <div class="btn btn-block btn-default">Text</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div id="textarea_button" class="draggable ui-widget-content">
                                                <div class="btn btn-block btn-default">TextArea</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div id="integer_button" class="draggable ui-widget-content">
                                                <div class="btn btn-block btn-default">Integer</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div id="money_button" class="draggable ui-widget-content">
                                                <div class="btn btn-block btn-default">MoneyType</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div id="password_button" class="draggable ui-widget-content">
                                                <div class="btn btn-block btn-default">Password</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div id="datetype_button" class="draggable ui-widget-content">
                                                <div class="btn btn-block btn-default">DateType</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div id="datetime_button" class="draggable ui-widget-content">
                                                <div class="btn btn-block btn-default">DateTime</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div id="checkbox_button" class="draggable ui-widget-content">
                                                <div class="btn btn-block btn-default">Checkbox</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div id="radio_button" class="draggable ui-widget-content">
                                                <div class="btn btn-block btn-default">Radio</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div id="file_button" class="draggable ui-widget-content">
                                                <div class="btn btn-block btn-default">File</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div id="choice_button" class="draggable ui-widget-content">
                                                <div class="btn btn-block btn-default">Choice</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div id="collection_button" class="draggable ui-widget-content">
                                                <div class="btn btn-block btn-default">Collection</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div id="button_button" class="draggable ui-widget-content">
                                                <div class="btn btn-block btn-default">Button</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree">{{ 'sunshine.applicationForm.new.other'|trans }}</a>
                                    </h4>
                                </div>
                                <div id="collapseThree" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        <p>CSS stands for Cascading Style Sheet. CSS allows you to specify various style properties for a given HTML element such as colors, backgrounds, fonts etc. <a href="https://www.tutorialrepublic.com/css-tutorial/" target="_blank">Learn more.</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        middle
                    </div>
                    <div class="col-md-2">right</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}